<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@android:color/holo_orange_light" android:endColor="@android:color/holo_orange_dark">
            </gradient>
            <stroke android:color="@android:color/holo_orange_dark"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
           <gradient android:startColor="@android:color/holo_orange_dark" android:endColor="@android:color/holo_orange_light">
           </gradient>
            <stroke android:color="@android:color/holo_orange_light"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>