<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_end_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/LevelInfoContainer">

        <LinearLayout style="@style/LevelInfoSidePadding" />

        <LinearLayout
            android:id="@+id/linear"
          android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/enter_data_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:text="@string/enter_data"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
            android:background="@drawable/et_bg"
            android:hint="@string/email"
            android:padding="10dp"
                tools:ignore="TextFields" />


            <EditText
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:background="@drawable/et_bg"
            android:hint="@string/name"
            android:padding="10dp" />

            <EditText
                android:id="@+id/ageEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:background="@drawable/et_bg"
                android:hint="@string/age"
                android:padding="10dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/currentUser"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/current_user"
                    android:textColor="#347b11"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/newUser"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/new_user"
                    android:textColor="#347b11"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/next"
                    android:textColor="#347b11"
                    android:textSize="18sp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>



        </LinearLayout>

